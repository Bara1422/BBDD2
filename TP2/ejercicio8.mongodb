// Uso de $lookup Realiza una agregaci√≥n donde se combinen los datos de alumnos y cursos usando $lookup.
use("empresa");

db.alumnos.aggregate([
    {
        $lookup: {
          from: "cursos",
          localField: "id_cursos",
          foreignField: "id",
          as: "cursos_insc"
        }
    }
])